@{ 
    CUSTOMER c = (CUSTOMER)@Session["userinfo"];

}
@using Tiki.App_Code;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/index.css")
    @Styles.Render("~/Content/main.css")
</head>
<body>

    <header class="header">
        <table class="w-100">
            <tr class="p-0">
                <td class="p-0">
                    <img class="w-100"
                         src="https://salt.tikicdn.com/ts/banner/19/c7/b0/1b5f27487cdeaaafba6e077300bcf77a.jpg"
                         alt="AdvertisementFile">
                </td>
            </tr>
            <tr>
                <td>
                    <!-- HEADER-->
                    <div class="header">
                        <div class="container">
                            <div class="row">
                                <div class="col-6">
                                    <div class="row">
                                        <div class="col-2">
                                            <a href="@Url.Action("Index", "Book")">
                                                <i class="tikicon icon-logo mr-3"></i>
                                            </a>
                                        </div>
                                        <div class="col-10 d-flex">
                                            <input type='text' id="txtTenSach"
                                                   class="header__input w-75 d-inline rounded-start"
                                                   placeholder="Nhập tên sách cần tìm" />

                                            <button id="btnTim"
                                                    class="header__search d-flex align-items-center a-hover">
                                                <div>

                                                    <i class="tikicon icon-search">

                                                    </i>
                                                    Tìm kiếm
                                                </div>
                                            </button>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 d-flex">
                                    <div class="header__user">
                                        <i class="tikicon icon-tracking"></i>
                                        <span>Theo dõi</span>
                                    </div>
                                    <div class="header__user">
                                        <i class="tikicon icon-notification"></i>
                                        <span>
                                            Thông báo
                                            <br>
                                            của tôi
                                        </span>
                                    </div>
                                    @if (c == null)
                                    {

                                        <button class="header__user text-decoration-none bg-none btn shadow-none p-0 d-flex"
                                                data-bs-toggle="modal" data-bs-target="#modalDangNhap">
                                            <i class="tikicon icon-user"></i>
                                            <span>
                                                <b>Đăng nhập</b><br>
                                                Tài khoản
                                            </span>
                                        </button>
                                    }
                                    else
                                    {

                                        <div class="header__user__account d-flex align-items-center">
                                            <button class="header__user text-decoration-none bg-none btn shadow-none p-0 d-flex">
                                                <i class="tikicon icon-user"></i>
                                                <span>
                                                    Chào <b>@GlobalFunction.getOnlyName(c.cus_name)</b>
                                                </span> 
                                            </button>

                                            <div class="header__user__menu">
                                                <a href="/sales/order/history?src=header_my_account">
                                                    Đơn hàng của tôi
                                                </a>
                                                <a href="/customer/notification?src=header_my_account">
                                                    Thông báo của tôi
                                                </a>
                                                <a href="/customer/account/edit?src=header_my_account">
                                                    Tài khoản của tôi
                                                </a>
                                                <a href="/nhan-xet-san-pham-ban-da-mua?src=header_my_account">
                                                    Nhận xét sản phẩm đã mua
                                                </a>
                                                <a href="https://tiki.vn/customer/tikinow?src=header_my_account">
                                                    <span class="img">
                                                        <img src="https://salt.tikicdn.com/ts/upload/5b/70/af/ac0eacaa8ec6738ac474f7bbe767bd75.png" />
                                                    </span>
                                                    <span class="content">
                                                        <span>TikiNOW</span>
                                                        <span>Đăng ký sử dụng ngay</span>
                                                    </span>

                                                </a>
                                                <a href="/customer/coupons?src=header_my_account">

                                                    <span class="img">
                                                        <img src="https://frontend.tikicdn.com/_desktop-next/static/img/mycoupon/coupon_code.svg" />
                                                    </span>
                                                    <span class="content">
                                                        <span>Mã giảm giá</span>
                                                        <span>Bạn đang có <b>0</b> mã giảm giá</span>
                                                    </span>

                                                </a>
                                                <a href="/customer/reward?src=header_my_account">

                                                    <span class="img">
                                                        <img src="https://frontend.tikicdn.com/_desktop-next/static/img/icons/tikixu.svg" />
                                                    </span>
                                                    <span class="content">
                                                        <span>Thông tin Tiki Xu</span>
                                                        <span>Bạn đang có <b>1.000</b> Tiki xu</span>
                                                    </span>

                                                </a>
                                                <a href="/customer/bookcare?src=header_my_account">
                                                    <span class="img">
                                                        <img src="https://frontend.tikicdn.com/_desktop-next/static/img/icons/bookcare.svg" />
                                                    </span>
                                                    <span class="content">
                                                        <span>Thông tin BookCare</span>
                                                        <span>Bạn đang có <b>0</b> BookCare</span>
                                                    </span>

                                                </a>
                                                <a href="/doi-tra-de-dang?src=header_my_account">
                                                    Đổi trả dễ dàng
                                                </a>
                                                <a>
                                                    Thoát tài khoản
                                                </a>
                                            </div>
                                        </div> 
                                    }

                                    <a class="header__user text-decoration-none header__card"
                                       href="@Url.Action("Index", "Cart")">
                                        <i class="tikicon icon-card ml-0"></i>
                                        <span>Giỏ hàng</span>
                                    </a>
                                </div>
                            </div>
                            <!-- //row-->
                        </div>
                        <!-- //container-->
                    </div>
                    <!-- //header-->
                    <!-- //HEADER -->
                </td>
            </tr>

        </table>

        <div class="header__breadcrumb">
            <div class="container py-0 overflow-hidden" style="--bs-breadcrumb-divider: '';">
                <div class="breadcrumb mb-0">
                    <a href="/" class="breadcrumb-item">Trang chủ</a>
                    <a href="/" class="breadcrumb-item">Nhà sách Tiki</a>
                </div>
            </div>
        </div>
        @Html.Partial("~/Views/Partial/_ModalLogin.cshtml")
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <!-- /.footer -->

    <script src="~/Scripts/bootstrap.bundle.min.js" language="javascript" type="text/javascript"></script>

</body>
</html>
