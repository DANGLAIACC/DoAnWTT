<div class="modal fade modalEditCustomer" id="modalEditCustomer" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Sửa thông tin khách hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("Edit","Customers")" method="post" id="form-main">
                    <span class="lblInfo">Tên đăng nhập</span>
                    @Html.TextBox("cus_usr", null, new { @readonly = "readonly", @placeholder = "Nhập họ tên", @class = "form-control form-input" })

                    <span class="lblInfo">Mật khẩu</span>
                    @Html.TextBox("cus_pwd", null, new { @placeholder = "Nhập mật khẩu", @class = "form-control form-input" })

                    <span class="lblInfo">Họ tên</span>
                    @Html.TextBox("cus_name", null, new { @placeholder = "Nhập họ tên", @class = "form-control form-input" })

                    <span class="lblInfo">Điện thoại</span>
                    @Html.TextBox("cus_phone", null, new { @placeholder = "Nhập số điện thoại", @class = "form-control form-input" })

                    <span class="lblInfo">Địa chỉ</span>
                    @Html.TextBox("cus_address", null, new { @placeholder = "Nhập địa chỉ", @class = "form-control form-input" })

                    <span>Giới tính: </span>
                    <div class="form-check-inline"> 
                        @Html.RadioButton("cus_gender", "Nam", new { @class = "form-check-input" })
                    </div>
                    <div class="form-check-inline">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="isFemale">
                        <label class="form-check-label" for="isFemale">
                            Nữ
                        </label>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="form-main">Cập nhật</button>
            </div>
        </div>
    </div>
</div>
